{
  "name": "colbycomms/wp-collapsible",
  "description": "A WordPress shortcode for collapsible HTML drawers.",
  "scripts": {
    "lint": "./vendor/bin/phpcs --extensions=php -s",
    "fix": "./vendor/bin/phpcbf --extensions=php -s",
    "test": "composer lint && vendor/bin/phpunit"
  },
  "authors": [
    {
      "name": "John Watkins",
      "email": "john.watkins@colby.edu"
    }
  ],
  "require-dev": {
    "phpunit/phpunit": ">=5.0",
    "squizlabs/php_codesniffer": "^3.0@dev",
    "wp-coding-standards/wpcs": "dev-master",
    "johnpbloch/wordpress-core": "dev-master"
  },
  "require": {
    "php": "^7.1",
    "colbycomms/colby-svg": "^1.0",
    "htmlburger/carbon-fields": "*"
  },
  "autoload": {
    "psr-4": {
      "ColbyComms\\Collapsible\\": "wp/"
    },
    "files": [
      "wp/index.php"
    ]
  }
}
